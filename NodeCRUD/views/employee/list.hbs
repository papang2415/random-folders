<div id="form" class="p-5 mt-5 container col-md-10 rounded">
    <div class="container-fluid border border-dark p-3 rounded">
        <h3 class="mb-4 pr-5">
            <a href="/employee" class="btn btn-danger float-right">
                <i class="fa fa-plus"> </i> Create New
            </a>
            Employee List
        </h3>
        <table class="table table-striped table-bordered rounded">
            <thead class="bg-primary">
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>City</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each list}}
                <tr>
                    <td>{{this.fullName}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.mobile}}</td>
                    <td>{{this.city}}</td>
                    <td class="d-flex justify-content-around">
                        <a href="/employee/{{this._id}}">
                            <i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
                        </a>
                        <a href="/employee/delete/{{this._id}}"
                            onclick="return confirm('Are you sure to delete this record?');">
                            <i class="fa fa-trash fa-lg text-danger" aria-hidden="true">

                            </i>
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>