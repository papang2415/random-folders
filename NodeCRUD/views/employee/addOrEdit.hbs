<div id="form" class="p-5 mt-5 container col-md-6 rounded">
    <div class="container-fluid border border-dark p-3 rounded">
        <h3 class="mb-4 text-center">{{viewTitle}}</h3><hr>
        <form action="/employee" method="POST" autocomplete="off">
            <input type="hidden" name="_id" value="{{employee._id}}">
            <div class="form-group">
                <label>Full Name</label>
                <input type="text" class="form-control" name="fullName" value="{{employee.fullName}}"
                    placeholder="Full Name">
                <div class="text-danger">
                    {{employee.fullNameError}}
                </div>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" name="email" value="{{employee.email}}" placeholder="Email">
                <div class="text-danger">
                    {{employee.emailError}}
                </div>
            </div>

            <div class="form-group md-6">
                <label>Mobile</label>
                <input type="text" name="mobile" placeholder="Mobile" value="{{employee.mobile}}" class="form-control">

            </div>
            <div class="form-group md-6">
                <label>City</label>
                <input type="text" name="city" placeholder="City" value="{{employee.city}}" class="form-control">
            </div>
            <div class="form-group d-flex justify-content-end">
                <button type="submit" class="btn btn-primary"><i class="fa fa-database"></i> Submit</button>
                <a href="/employee/list" class="btn btn-danger ml-3">
                    <i class="fa fa-list-alt"></i> View All
                </a>
            </div>
        </form>
    </div>
</div>